{
  "name": "my-quick-node-app",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "concurrently 'pnpm dev:build' 'pnpm dev:run'",
    "dev:build": "esbuild src/server.ts --platform=node --bundle --outfile=dist/main.js --watch",
    "dev:run": "nodemon dist/main.js",
    "test": "vitest run",
    "test:w": "vitest"
  },
  "dependencies": {
    "@prisma/client": "^4.2.1",
    "express": "^4.18.1"
  },
  "devDependencies": {
    "@fast-check/vitest": "^0.0.3",
    "@types/express": "^4.17.13",
    "@types/node": "^18.6.1",
    "@vitest/ui": "^0.29.7",
    "concurrently": "^7.6.0",
    "esbuild": "^0.14.50",
    "nodemon": "^2.0.19",
    "prisma": "^4.2.1",
    "typescript": "^4.7.4",
    "vitest": "^0.29.7"
  }
}
